
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div class="page-title">
        <div class="title-box">
            <h1>About Us</h1>
        </div>
    </div>
    <div class="about-block">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="section-title styler_color">
                        <h2><span class="normal">ABOUT</span> <span class="styler_color">RDK Home Solutions</span></h2>
                    </div>
                    <div class="about-text">
                        <p>
                            RDK Home Solutions is a family owned & operated company, established in 2016. We take pride in restoring all communities lay,
                            renovating distressed and condemned properties into beautiful homes for all. Based in the tri-state area, we take pride in bringing 
                            beauty to these forgotten properties all while adding value to the surrounding communities.
                        </p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="about-img">
                        <img src="~/Content/images/about_image.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

